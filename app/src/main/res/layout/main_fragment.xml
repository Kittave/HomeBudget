<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/monthHeaderView"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Kwiecień" />

        <TextView
            android:id="@+id/incomesLabelView"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/incomes"
            app:layout_constraintEnd_toStartOf="@id/expensesLabelView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/monthHeaderView" />

        <TextView
            android:id="@+id/incomesTextView"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/incomesLabelView"
            app:layout_constraintStart_toStartOf="@id/incomesLabelView"
            app:layout_constraintTop_toBottomOf="@id/incomesLabelView"
            tools:text="10 000,00 zł" />

        <TextView
            android:id="@+id/plannedIncomesView"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/incomesLabelView"
            app:layout_constraintStart_toStartOf="@id/incomesLabelView"
            app:layout_constraintTop_toBottomOf="@id/incomesTextView"
            tools:text="z 15 000,00 zł" />

        <TextView
            android:id="@+id/expensesLabelView"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/expenses"
            app:layout_constraintEnd_toStartOf="@id/totalLabelView"
            app:layout_constraintStart_toEndOf="@id/incomesLabelView"
            app:layout_constraintTop_toBottomOf="@id/monthHeaderView" />

        <TextView
            android:id="@+id/expensesTextView"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/expensesLabelView"
            app:layout_constraintStart_toStartOf="@id/expensesLabelView"
            app:layout_constraintTop_toBottomOf="@id/expensesLabelView"
            tools:text="8 500,00 zł" />

        <TextView
            android:id="@+id/plannedExpensesView"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/expensesLabelView"
            app:layout_constraintStart_toStartOf="@id/expensesLabelView"
            app:layout_constraintTop_toBottomOf="@id/expensesTextView"
            tools:text="z 15 000,00 zł" />

        <TextView
            android:id="@+id/totalLabelView"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/total"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/expensesLabelView"
            app:layout_constraintTop_toBottomOf="@id/monthHeaderView" />

        <TextView
            android:id="@+id/totalTextView"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/totalLabelView"
            app:layout_constraintStart_toStartOf="@id/totalLabelView"
            app:layout_constraintTop_toBottomOf="@id/totalLabelView"
            tools:text="1 500,00 zł" />

        <TextView
            android:id="@+id/incomesHeaderView"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/incomes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plannedIncomesView" />

        <TextView
            android:id="@+id/allIncomesTextView"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/incomesHeaderView"
            tools:text="all incomes" />

        <TextView
            android:id="@+id/expensesHeaderView"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/expenses"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/allIncomesTextView" />

        <TextView
            android:id="@+id/allExpensesTextView"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/expensesHeaderView"
            tools:text="all expenses" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
